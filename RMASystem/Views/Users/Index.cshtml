@model IEnumerable<RMASystem.User>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Dodaj nowy", "Create", null, new {@class = "btn btn-primary btn-sm"})
    </p>
    <table class="table table-responsive">
        <tr>
            <th>
                @Html.DisplayName("Imie")
            </th>
            <th>
                @Html.DisplayName("Nazwisko")
            </th>
            <th>
                @Html.DisplayName("Telefon")
            </th>
	        <th>
		        @Html.DisplayNameFor(model => model.Email)
	        </th>
        <!--
        <th>
	        @Html.DisplayName("Hasło")
        </th>
		-->
            <th>
                @Html.DisplayName("Miasto")
            </th>
            <th>
                @Html.DisplayName("Bank")
            </th>
            <th>
                @Html.DisplayName("Rola")
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
			<td>
				@Html.DisplayFor(modelItem => item.Email)
			</td>
    <!--
    <td>
	    @Html.DisplayFor(modelItem => item.Password)
    </td>
-->
            <td>
                @Html.DisplayFor(modelItem => item.Adress.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BankAccount.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.Name)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id=item.Id }, new {@class = "btn btn-primary"})
                @Html.ActionLink("Szczegóły", "Details", new { id=item.Id }, new {@class = "btn btn-primary"})
                @Html.ActionLink("Usuń", "Delete", new { id=item.Id }, new {@class = "btn btn-danger"})
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
