@model IEnumerable<RMASystem.Adress>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Dodaj nowy", "Create", null, new {@class = "btn btn-primary btn-sm"})
    </p>
    <table class="table table-responsive">
        <tr>
            <th>
                @Html.DisplayName("Miasto")
            </th>
            <th>
                @Html.DisplayName("Ulica")
            </th>
            <th>
                @Html.DisplayName("Kod pocztowy")
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id=item.Id }, new {@class = "btn btn-primary"})
                @Html.ActionLink("Szczegóły", "Details", new { id=item.Id }, new {@class = "btn btn-primary"})
                @Html.ActionLink("Usuń", "Delete", new { id=item.Id }, new {@class = "btn btn-danger"})
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
