@model RMASystem.Models.ApplicationUser

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
<div>
	@{
		var email = HttpContext.Current.User.Identity.Name;
		if (HttpContext.Current.User.IsInRole("Administrator")) {
			<h4>Admin Panel</h4>
		}
	}
	<h2>Witaj @ViewBag.User.FirstName!</h2>
	@{
		if (!ViewBag.User.EmailConfirmed) {
			<h3>Nie potwierdziłeś adresu e-mail.</h3>
		}
	}
</div>
</body>
</html>
