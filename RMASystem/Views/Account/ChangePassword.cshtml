@using RMASystem.Models.ViewModel
@model ChangePasswordViewModel

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width"/>
	<title>Zmiana hasła</title>
</head>
<body>
@using (Html.BeginForm("ChangePassword", "Account")) {
	<div class="form-horizontal">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.OldPassword, null, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.OldPasswordRepeated, null, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.OldPasswordRepeated, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.OldPasswordRepeated, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.NewPassword, null, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<input type="submit" value="Zmień" class="btn btn-primary">
		</div>
	</div>
}
</body>
</html>