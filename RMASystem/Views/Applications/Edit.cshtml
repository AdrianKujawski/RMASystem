                    @Html.EditorFor(model => model.Purschace, new { htmlAttributes = new { @class = "form-control DatePicker" } })
                    @Html.ValidationMessageFor(model => model.Purschace, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
