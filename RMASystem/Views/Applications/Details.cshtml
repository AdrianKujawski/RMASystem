@model Application

@{
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width"/>
	<title>Szczegóły</title>
</head>
<body>
<div>
	<h4>Zgłoszenie</h4>
	<hr/>

	<div class="form-group">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="h2">
					<strong>@Html.DisplayName("Status")</strong>
					@Html.DisplayFor(m => m.Statue.Name)
				</div>
			</div>
		</div>
		<br/>
		<div class="row">
			<div class="col-md-6">
				<dl class="dl-horizontal">
					<dt>
						@Html.DisplayName("Nazwa")
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Name)
					</dd>

					<dt>
						@Html.DisplayName("Nr faktury")
					</dt>

					<dd>
						@Html.DisplayFor(model => model.InvoiceNo)
					</dd>

					<dt>
						@Html.DisplayName("Data zakupu")
					</dt>
					<dd>
						@Html.DisplayFor(model => model.Purschace)
					</dd>
					<dt>
						@Html.DisplayName("Typ zlecenia")
					</dt>

					<dd>
						@Html.DisplayFor(model => model.AppType.Name)
					</dd>

					<dt>
						@Html.DisplayName("Produkt")
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Product.Name)
					</dd>

					<dt>
						@Html.DisplayName("Koszt")
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Cost)
					</dd>
				</dl>
			</div>

			<div class="col-md-6">
				<dl class="dl-horizontal">
					<dt>
						@Html.DisplayName("Data otwarcia")
					</dt>

					<dd>
						@Html.DisplayName(Model.Start != null ? Model.Start.ToString() : "-")
					</dd>

					<dt>
						@Html.DisplayName("Data potwierdzenia")
					</dt>

					<dd>
						@Html.DisplayName(Model.Pending != null ? Model.Pending.ToString() : "-")
					</dd>

					<dt>
						@Html.DisplayName("Data rozpoczęcia")
					</dt>

					<dd>
						@Html.DisplayName(Model.InProgress != null ? Model.InProgress.ToString() : "-")
					</dd>

					<dt>
						@Html.DisplayName("Data zakończenia")
					</dt>

					<dd>
						@Html.DisplayName(Model.End != null ? Model.End.ToString() : "-")
					</dd>
				</dl>
			</div>
		</div>
	</div>

	<div class="form-group">
		<div class="row">
			<div class="col-md-6">
				<dl class="dl-horizontal">
					<dt>
						@Html.DisplayName("Klient")
					</dt>

					<dd>
						@Html.DisplayFor(model => model.User.Identificator)
					</dd>

					<dt>
						@Html.DisplayName("Serwisant")
					</dt>

					<dd>
						@Html.DisplayFor(model => model.User1.Identificator)
					</dd>

					<dt>
						@Html.DisplayName("Sposób realizacji")
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Realization.Name)
					</dd>

					<dt>
						@Html.DisplayName("Rezultat")
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Result.Name)
					</dd>

				</dl>
			</div>

		</div>

		<div class="row" style="Word-wrap: break-word;">
			<div class="col-md-4">
				<div class="panel panel-default" style="height: 250px;">
					<div class="panel-heading">@Html.Label("Zawartość")</div>
					<div class="panel-body" >
						@Html.DisplayFor(model => model.Content)
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="panel panel-default" style="height: 250px;">
					<div class="panel-heading">@Html.Label("Opis")</div>
					<div class="panel-body">
						@Html.DisplayFor(model => model.Description)
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="panel panel-default" style="height: 250px;">
					<div class="panel-heading">@Html.Label("Oczekiwania")</div>
					<div class="panel-body">
						@Html.DisplayFor(model => model.Expectations)
					</div>
				</div>
			</div>
		</div>
	</div>
	<dl class="dl-horizontal">


	</dl>
</div>
<p>
	@Html.ActionLink("Historia wiadomości", "MessageHistory", new { applicationId = Model.Id, clientEMail = Model.User.Email}, new { @class = "btn btn-primary btn-sm" })
	@if (HttpContext.Current.User.IsInRole("Administrator") || HttpContext.Current.User.IsInRole("Serwisant")) {
		@Html.ActionLink("Edytuj", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary btn-sm" })

	}
	@Html.ActionLink("Wróć do listy", "Index", null, new { @class = "btn btn-primary btn-sm" })
</p>
</body>
</html>